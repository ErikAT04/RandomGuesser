<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewInit"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="\nSeleccione qué quiere hacer"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextInt"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="Intentos"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextMax"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:hint="Valor máximo"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonConf"
                android:layout_width="103dp"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:text="Configuración" />

            <Button
                android:id="@+id/buttonOk"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Confirmar" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextOpt"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:enabled="false"
            android:hint="Opción"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text="Jugar" />

        <Button
            android:id="@+id/buttonGuess"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:enabled="false"
            android:text="Adivinar"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGuesses"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="Te quedan X intentos"
            android:visibility="invisible" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>